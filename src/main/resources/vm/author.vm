<div style="border-bottom:1px solid #DDD;border-top:1px solid #DDD;padding:5px 0;margin-top:10px">
	<div style="float:right;text-align:right">
	#foreach ($url in $author.allUrls)
		<a style="margin-left:5px" href="$url.url" target="_blank"><img title="$url.url" src="${settingsManager.globalSettings.baseUrl}/download/resources/fr.dutra.confluence2wordpress/social/24x24/24x24-${url.icon}.png" alt="$url.url" width="24" height="24" /></a>
	#end
	</div>
	<span style="font-style:italic;height:24px;line-height:24px">$i18n.getText("macro.author.by") 
	#if ($author.allUrls.size() > 0)
	<a href="$author.allUrls[0].url" target="_blank">$author.firstName $author.lastName</a>
	#else
	$author.firstName $author.lastName
	#end
	</span>
</div>