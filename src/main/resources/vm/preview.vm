<html>
<head>
    <title>$action.page.displayTitle - $action.getText("preview.title")</title>
    <meta name="decorator" content="atl.popup"/>
    #requireResource("fr.xebia.confluence2wordpress:confluence2wordpress-resources")
</head>
<body>

<h2>$action.getText("preview.title")</h2>

<fieldset class="c2w_preview c2w_left">
    <legend><h3>$action.getText("preview.form.wiki")</h3></legend>
    <textarea class="c2w_preview" rows="15" readonly="true" wrap="off">$action.wikiEscaped</textarea>
</fieldset>

<fieldset class="c2w_preview c2w_right">
    <legend><h3>$action.getText("preview.form.html")</h3></legend>
    <textarea class="c2w_preview" rows="15" readonly="true" wrap="off">$action.htmlEscaped</textarea>
</fieldset>
    
</body>
</html>