<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">

    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
    </plugin-info>

    <web-resource key="wiki2html-resources">
        <resource type="download" name="wiki2html.css" location="css/wiki2html.css"/>
    </web-resource>

    <resource key="wiki2html-i18n" type="i18n" name="i18n" location="i18n.wiki2html" />
    
    <!-- from http://www.freeiconsweb.com -->
    <resource key="wiki2html-icon" type="download" name="wiki2html.png" location="img/wiki2html.png">
        <property key="content-type" value="image/png"/>
    </resource>
    
    <web-item key="wiki2html-link" name="HTML Converter Link" section="system.content.action/primary"  weight="100">
        <label key="link.label" />
        <link>/wiki2html/convert.action?pageId=$page.id</link>
        <!-- http://forums.atlassian.com/thread.jspa?threadID=31983 -->
        <icon height="18" width="18">
            <link>/download/resources/${project.groupId}.${project.artifactId}/wiki2html.png</link>
        </icon>
    </web-item>
    
     
    <xwork key="wiki2html-action" name="Wiki-to-Html Converter Action">
        <package name="wiki2html" extends="default" namespace="/wiki2html">
            <default-interceptor-ref name="defaultStack" />
            <action name="convert" class="fr.dutra.xebia.wiki2html.action.Wiki2HtmlAction">
                <result name="success" type="velocity">/vm/wiki2html.vm</result>
            </action>
        </package>
    </xwork>
    
    <rpc-xmlrpc key="wiki2html-xmlrpc"
                name="Wiki-to-Html Converter XML-RPC API"
                class="fr.dutra.xebia.wiki2html.rpc.Wiki2HtmlRpcImpl">
        <description>Wiki-to-Html Converter XML-RPC service</description>
        <service-name>Wiki2HtmlConverter</service-name>
        <service-path>wiki2html</service-path>
        <published-interface>fr.dutra.xebia.wiki2html.rpc.Wiki2HtmlRpc</published-interface>
        <authenticate>true</authenticate>
    </rpc-xmlrpc>
    
    <component-import key="transactionTemplate">
        <description>Import the com.atlassian.sal.api.transaction.TransactionTemplate</description>
        <interface>com.atlassian.sal.api.transaction.TransactionTemplate</interface>
    </component-import>
    
</atlassian-plugin>
