<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">

    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="configure.url">/confluence2wordpress/settings.action</param>
    </plugin-info>

    <web-resource key="c2w-resources">
        <resource type="download" name="confluence2wordpress.css" location="css/confluence2wordpress.css"/>
    </web-resource>

    <resource key="c2w-i18n" type="i18n" name="i18n" location="i18n.confluence2wordpress" />
    
    <resource key="c2w-icon" type="download" name="confluence2wordpress.png" location="img/confluence2wordpress.png">
        <property key="content-type" value="image/png"/>
    </resource>
    
    <web-item key="c2w-link" name="Confluence-to-Wordpress Converter Link" 
        section="system.content.action/primary"  weight="100">
        <label key="link.label" />
        <link>/confluence2wordpress/convert.action?pageId=$page.id</link>
        <!-- http://forums.atlassian.com/thread.jspa?threadID=31983 -->
        <icon height="18" width="18">
            <link>/download/resources/${project.groupId}.${project.artifactId}/confluence2wordpress.png</link>
        </icon>
    </web-item>
    
    <macro name="more" class="fr.xebia.confluence2wordpress.macro.MoreMacro" key="c2w-more-macro" 
        icon="/download/resources/${project.groupId}.${project.artifactId}/confluence2wordpress.png">
        <description>Generates a Wordpress "more" markup.</description>
        <category name="external-content"/>
    </macro>
    
    <macro name="wordpress-sync-info" class="fr.xebia.confluence2wordpress.macro.MetadataMacro" key="c2w-sync-info-macro" hidden="true" />
    
    <xwork key="c2w-action" name="Confluence-to-Wordpress Converter Action">
        <package name="confluence2wordpress" extends="default" namespace="/confluence2wordpress">
            <default-interceptor-ref name="defaultStack" />
            <action name="convert" class="fr.xebia.confluence2wordpress.action.ConversionAction" method="input">
                <result name="success" type="velocity">/vm/convert.vm</result>
            </action>
            <action name="preview" class="fr.xebia.confluence2wordpress.action.ConversionAction" method="preview">
                 <result name="success" type="velocity">/vm/preview.vm</result>
            </action>
            <action name="sync" class="fr.xebia.confluence2wordpress.action.ConversionAction" method="sync">
                 <interceptor-ref name="validatingStack" />
                 <result name="success" type="redirect">convert.action?pageId=${pageId}</result>
                 <result name="input" type="velocity">/vm/convert.vm</result>
            </action>
            <action name="settings" class="fr.xebia.confluence2wordpress.action.SettingsAction" method="input">
                <result name="success" type="velocity">/vm/settings.vm</result>
            </action>
            <action name="updateSettings" class="fr.xebia.confluence2wordpress.action.SettingsAction" method="execute">
                <interceptor-ref name="validatingStack" />
                <result name="success" type="redirect">settings.action?pageUrl=${pageUrl}</result>
                <result name="input" type="velocity">/vm/settings.vm</result>
            </action>
        </package>
    </xwork>

    <component-import key="salUserManager" interface="com.atlassian.sal.api.user.UserManager" />

    <component-import key="pluginSettingsFactory" interface="com.atlassian.sal.api.pluginsettings.PluginSettingsFactory" />

    <component-import key="transactionTemplate" interface="com.atlassian.sal.api.transaction.TransactionTemplate" />
    
</atlassian-plugin>
