<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">

    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="configure.url">/confluence2wordpress/settings.action</param>
    </plugin-info>

    <web-resource key="c2w-conversion-resources">
        <!-- jQuery UI + theme -->
        <resource type="download" name="jquery-ui-1.8.16.custom.min.js" location="jquery/jquery-ui-1.8.16.custom.min.js"/>
        <resource type="download" name="jquery-ui-1.8.16.custom.css" location="jquery/jquery-ui-1.8.16.custom.css"/>
        <resource type="download" name="images/" location="jquery/images"/>
        <!-- jQuery TimePicker add-on -->
        <resource type="download" name="jquery-ui-timepicker-addon.js" location="jquery/jquery-ui-timepicker-addon.js"/>
        <resource type="download" name="jquery-ui-timepicker-addon.css" location="jquery/jquery-ui-timepicker-addon.css"/>
        <!-- autocomplete extensions -->
        <resource type="download" name="autocomplete-combobox.js" location="js/autocomplete-combobox.js"/>
        <resource type="download" name="autocomplete-multiple.js" location="js/autocomplete-multiple.js"/>
        <!-- customizations -->
        <resource type="download" name="jquery-customizations.css" location="css/jquery-customizations.css"/>
        <dependency>confluence.web.resources:ajs</dependency>
    </web-resource>

    <web-resource key="c2w-settings-resources">
        <!-- jQuery UI + theme -->
        <resource type="download" name="jquery-ui-1.8.16.custom.min.js" location="jquery/jquery-ui-1.8.16.custom.min.js"/>
        <resource type="download" name="jquery-ui-1.8.16.custom.css" location="jquery/jquery-ui-1.8.16.custom.css"/>
        <resource type="download" name="images/" location="jquery/images"/>
        <!-- autocomplete extensions -->
        <resource type="download" name="autocomplete-multiple.js" location="js/autocomplete-multiple.js"/>
        <!-- customizations -->
        <resource type="download" name="jquery-customizations.css" location="css/jquery-customizations.css"/>
        <dependency>confluence.web.resources:ajs</dependency>
    </web-resource>
    
    <web-resource key="c2w-datepicker-en-GB">
        <resource type="download" name="jquery.ui.datepicker-en-GB.js" location="jquery/jquery.ui.datepicker-en-GB.js"/>
    </web-resource>
    <web-resource key="c2w-datepicker-fr">
        <resource type="download" name="jquery.ui.datepicker-fr.js" location="jquery/jquery.ui.datepicker-fr.js"/>
    </web-resource>
    <web-resource key="c2w-datepicker-nl">
        <resource type="download" name="jquery.ui.datepicker-nl.js" location="jquery/jquery.ui.datepicker-nl.js"/>
    </web-resource>

    <web-resource key="c2w-preview-resources">
        <resource type="download" name="preview.css" location="css/preview.css"/>
    </web-resource>
 
    <resource key="c2w-i18n" type="i18n" name="i18n" location="i18n.confluence2wordpress" />
    
    <resource key="c2w-icon" type="download" name="confluence2wordpress.png" location="img/confluence2wordpress.png">
        <property key="content-type" value="image/png"/>
    </resource>
    
    <web-item key="c2w-link" name="Confluence-to-Wordpress Converter Link" 
        section="system.content.action/primary"  weight="100">
        <label key="link.label" />
        <link>/confluence2wordpress/convert.action?pageId=$page.id</link>
        <!-- http://forums.atlassian.com/thread.jspa?threadID=31983 -->
        <icon height="18" width="18">
            <link>/download/resources/${project.groupId}.${project.artifactId}/confluence2wordpress.png</link>
        </icon>
        <condition class="fr.xebia.confluence2wordpress.condition.PluginPermissionsCondition" />
    </web-item>
    
    <macro name="more" class="fr.xebia.confluence2wordpress.macro.MoreMacro" key="c2w-more-macro" 
        icon="/download/resources/${project.groupId}.${project.artifactId}/confluence2wordpress.png">
        <description>Generates a Wordpress "more" markup.</description>
        <category name="external-content"/>
    </macro>
    
    <macro name="wordpress-sync-info" class="fr.xebia.confluence2wordpress.macro.SyncInfoMacro" key="c2w-sync-info-macro" hidden="true" />
    
    <xwork key="c2w-action" name="Confluence-to-Wordpress Converter Action">
        <package name="confluence2wordpress" extends="default" namespace="/confluence2wordpress">
            <default-interceptor-ref name="defaultStack" />
            
            <action name="convert" class="fr.xebia.confluence2wordpress.action.ConversionAction" method="input">
                <result name="success" type="velocity">/vm/convert.vm</result>
            </action>
            <action name="preview" class="fr.xebia.confluence2wordpress.action.ConversionAction" method="preview">
                 <result name="success" type="velocity">/vm/preview.vm</result>
            </action>
            <action name="sync" class="fr.xebia.confluence2wordpress.action.ConversionAction" method="sync">
                 <interceptor-ref name="validatingStack" />
                 <result name="success" type="redirect">convert.action?pageId=${pageId}</result>
                 <result name="input" type="velocity">/vm/convert.vm</result>
            </action>
            
            <action name="settings" class="fr.xebia.confluence2wordpress.action.SettingsAction" method="input">
                <result name="success" type="velocity">/vm/settings.vm</result>
            </action>
            <action name="updateSettings" class="fr.xebia.confluence2wordpress.action.SettingsAction" method="execute">
                <interceptor-ref name="validatingStack" />
                <result name="success" type="redirect">settings.action?pageUrl=${pageUrl}</result>
                <result name="input" type="velocity">/vm/settings.vm</result>
            </action>
            <action name="testConnection" class="fr.xebia.confluence2wordpress.action.SettingsAction" method="testConnection">
                <interceptor-ref name="validatingStack" />
                <result name="success" type="velocity">/vm/settings.vm</result>
                <result name="input" type="velocity">/vm/settings.vm</result>
            </action>
        </package>
    </xwork>

    <!-- 
     Beware that the property "userManager" would be mapped to com.atlassian.user.UserManager
     instead of com.atlassian.sal.api.user.UserManager.
     -->
    <component-import key="salUserManager" interface="com.atlassian.sal.api.user.UserManager" />

    <component-import key="pluginSettingsFactory" interface="com.atlassian.sal.api.pluginsettings.PluginSettingsFactory" />

    <component key="pluginSettingsManager" class="fr.xebia.confluence2wordpress.core.settings.DefaultPluginSettingsManager">
        <description>Provides access to the plugin settings.</description>
        <interface>fr.xebia.confluence2wordpress.core.settings.PluginSettingsManager</interface>
    </component>

    <component key="pluginPermissionsManager" class="fr.xebia.confluence2wordpress.core.permissions.DefaultPluginPermissionsManager">
        <description>Provides a convenient way to check permissions for this plugin.</description>
        <interface>fr.xebia.confluence2wordpress.core.permissions.PluginPermissionsManager</interface>
    </component>
    
    <component key="pageLabelsSynchronizer" class="fr.xebia.confluence2wordpress.core.labels.DefaultPageLabelsSynchronizer">
        <description>Synchronizes Confluence labels with Wordpress tags.</description>
        <interface>fr.xebia.confluence2wordpress.core.labels.PageLabelsSynchronizer</interface>
    </component>
    
</atlassian-plugin>
